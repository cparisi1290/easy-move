<h2><%=@blog_post.title%></h2>
<h4>by <%=@blog_post.user.name.capitalize%></h4>
<h5><%=@blog_post.created_at%></h5><br><br>

<%=@blog_post.content%><br><br>

<a href="/blog_posts/<%=@blog_post.id%>/edit">Edit</a>

<form action="/blog_posts/<%=@blog_post.id%>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete">
</form>